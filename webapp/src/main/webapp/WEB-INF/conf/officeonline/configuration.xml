<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <key>org.exoplatform.officeonline.rest.WOPIResource</key>
    <type>org.exoplatform.officeonline.rest.WOPIResource</type>
  </component>

  <component>
    <key>org.exoplatform.officeonline.rest.EditorResource</key>
    <type>org.exoplatform.officeonline.rest.EditorResource</type>
  </component>

  <component>
    <key>org.exoplatform.officeonline.WOPIService</key>
    <type>org.exoplatform.officeonline.WOPIService</type>
    <init-params>
      <properties-param>
        <name>token-configuration</name>
        <property name="secret-key" value="${officeonline.token.secret:}" />
      </properties-param>
    </init-params>
  </component>

  <component>
    <key>org.exoplatform.officeonline.EditorService</key>
    <type>org.exoplatform.officeonline.EditorService</type>
  </component>

  <!-- WOPIDiscoveryPlugin -->
  <external-component-plugins>
    <target-component>org.exoplatform.officeonline.WOPIService</target-component>
    <component-plugin>
      <name>set.wopidiscovery</name>
      <set-method>setWOPIDiscoveryPlugin</set-method>
      <type>org.exoplatform.officeonline.WOPIDiscoveryPlugin</type>
      <description>WOPIDiscoveryService performs WOPI Discovery for Office Online</description>
      <init-params>
        <value-param>
          <name>discovery-url</name>
          <value>${officeonline.discrovery.url:https://ffc-onenote.officeapps.live.com/hosting/discovery}</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
  
  
  <!-- Cache configuration -->
  <external-component-plugins>
    <target-component>org.exoplatform.services.cache.CacheService</target-component>
    <component-plugin>
      <name>addExoCacheConfig</name>
      <set-method>addExoCacheConfig</set-method>
      <type>org.exoplatform.services.cache.ExoCacheConfigPlugin</type>
      <description>Cache configuration for officeonline service</description>
      <init-params>
        <object-param>
          <name>officeonline.Cache</name>
          <description></description>
          <object type="org.exoplatform.services.cache.ExoCacheConfig">
            <field name="name">
              <string>officeonline.Cache</string>
            </field>
            <field name="maxSize">
              <int>${officeonline.Cache.Capacity:5000}</int>
            </field>
            <field name="liveTime">
              <long>${officeonline.Cache.TimeToLive:-1}</long>
            </field>
            <field name="implementation">
              <string>org.exoplatform.services.cache.concurrent.ConcurrentFIFOExoCache</string>
            </field>
          </object>
        </object-param>
        <object-param profiles="cluster">
          <name>officeonline.Cache</name>
          <description></description>
          <object type="org.exoplatform.services.cache.impl.infinispan.generic.GenericExoCacheConfig">
            <field name="name">
              <string>officeonline.Cache</string>
            </field>
            <field name="strategy">
              <string>${officeonline.Cache.strategy:NONE}</string>
            </field>
            <field name="maxEntries">
              <int>${officeonline.Cache.Capacity:5000}</int>
            </field>
            <field name="lifespan">
              <long>${officeonline.Cache.TimeToLive:-1}</long>
            </field>
            <field name="cacheMode">
              <string>${officeonline.Cache.cacheMode:replication}</string>
            </field>
          </object>
        </object-param>

      </init-params>
    </component-plugin>
  </external-component-plugins>


  <external-component-plugins>
    <target-component>org.exoplatform.web.filter.ExtensibleFilter</target-component>
    <component-plugin>
      <name>Onlyoffice Editor integration filter plugin</name>
      <set-method>addFilterDefinitions</set-method>
      <type>org.exoplatform.web.filter.FilterDefinitionPlugin</type>
      <init-params>
        <object-param>
          <name>Onlyoffice Editor integration filter</name>
          <object type="org.exoplatform.web.filter.FilterDefinition">
            <field name="filter">
              <object type="org.exoplatform.officeonline.web.TokenAuthenticationFilter" />
            </field>
            <field name="patterns">
              <collection type="java.util.ArrayList" item-type="java.lang.String">
                <value>
                  <string>/rest/wopi.*</string>
                </value>
              </collection>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>